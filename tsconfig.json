{
  "compilerOptions": {
    // ðŸ‘‡ Remove o aviso do TypeScript sobre opÃ§Ãµes antigas
    "ignoreDeprecations": "6.0",
    // ConfiguraÃ§Ãµes do Next + TS
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // ðŸ‘‡ Alias para importaÃ§Ãµes (ex.: import X from "@/components/X")
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": false,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
